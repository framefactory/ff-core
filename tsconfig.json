{
    "extends": "./tsconfig.base.json",

    "compilerOptions": {
        "target": "ES2021",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",

        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "./build/types",
        "outDir": "./build/esm",
        "rootDir": "./src"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
    ]
}